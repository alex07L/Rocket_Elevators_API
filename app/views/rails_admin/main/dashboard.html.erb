<div style='width: 800px;'>  
  <div id="map" style='width: 800px; height: 400px;'></div>  
</div>  
<script async defer
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDM0bUR2l95VcS584KEgnQfj819PVC4M8Q&callback=initMap">
        </script> 
		
<script>
          
     function initMap() {
         center_psn = {lat: 46.829853, lng: -71.254028};
         map = new google.maps.Map(document.getElementById('map'), {
        zoom : 5,
         center: center_psn,
        })
       
	   
		
        <% @listmap.each_with_index do |lp| %>
		<% response = JSON.parse(HTTP.get("http://api.weatherapi.com/v1/forecast.json?key="+ENV['WEATHER']+"&q="+lp[:zipCode]+"&days=7").body) %> 
            lat = <%= lp[:lat] %>
            long = <%= lp[:long] %>
            myLatLng = {lat: lat, lng: long}
            marker = new google.maps.Marker({
                    position: myLatLng,
                    
                    map: map,
            })

            contentString = '<div id="content">'+
            '<div id="siteNotice">'+
            '</div>'+
            '<h1 id="firstHeading" class="firstHeading"> <%= lp[:name] %></h1>'+
            '<div id="bodyContent">'+
            '<p><b>Address: </b> <%= lp[:address] %></br>' +
            '<b>Number of Floors: </b> <%= lp[:floors] %></br>' +
            '<b>Client Name: </b> <%= lp[:client] %></br>' +
            '<b>Number of Batteries: </b> <%= lp[:battery] %></br>' +
            '<b>Number of Columns:</b> <%= lp[:column] %></br>' +
            '<b>Number of Elevators:</b> <%= lp[:elevator] %></br>' +
            '<b>Technician Name: </b> <%= lp[:technician] %></br><b>Current Temperature: </b> <%= response['current']['temp_c'] %> Â°C</p>' +
			
            '</div>'+
            '</div>'

            marker.infowindow = new google.maps.InfoWindow({
            content: contentString
            })

            previous = false
            marker.addListener('click', function() {
                if(previous) {
                    previous.close()
                }
                previous = this.infowindow;
                this.infowindow.open(map, this);
            })

            
        <% end %>
       
      }
    </script>

